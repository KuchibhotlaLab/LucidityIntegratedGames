<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:background="@color/Transparent">
        <Button
            android:id="@+id/btn_view_location"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/uploadchoice"
            android:text="@string/locationView"
            android:textColor="@color/colorWhite"
            android:textSize="20dp"
            android:fontFamily="@font/kayak_sans_regular"
            android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_weight="2"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:background="@color/Transparent">
        <Button
            android:id="@+id/btn_open_questionnaire"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/uploadchoice"
            android:text="@string/historyStart"
            android:textColor="@color/colorWhite"
            android:textSize="20dp"
            android:fontFamily="@font/kayak_sans_regular"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/btn_sync_location"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/uploadchoice"
            android:textColor="@color/colorWhite"
            android:fontFamily="@font/kayak_sans_regular"
            android:textSize="20dp"
            android:text="@string/locationSync"
            android:layout_weight="1"/>
    </LinearLayout>
    <Button
        android:id="@+id/btn_cancel_location_dialog"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@color/colorDarkPink"
        android:textColor="@color/colorWhite"
        android:textSize="36dp"
        android:fontFamily="@font/kayak_sans_regular"
        android:text="Cancel" />
</LinearLayout>
